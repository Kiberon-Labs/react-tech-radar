{
	"name": "@kiberon-labs/react-tech-radar",
	"description": "A React Component for Tech Radar inspired by ThoughtWorks' technology decision sharing project",
	"version": "1.0.0",
	"author": "Kiberon Labs <support@kiberonlabs.com>",
	"repository": {
		"type": "git",
		"url": "https://github.com/kiberon-labs/react-tech-radar.git"
	},
	"keywords": [
		"d3",
		"storybook",
		"technology radar"
	],
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		}
	},
	"types": "./dist/index.d.ts",
	"main": "./dist/index.js",
	"dependencies": {
		"d3-color": "3.1.0",
		"d3-scale": "^3.2.3",
		"d3-scale-chromatic": "^2.0.0",
		"d3-shape": "^2.0.0",
		"styled-components": "^6.1.19"
	},
	"peerDependencies": {
		"react": ">=18.0.0",
		"react-dom": ">=18.0.0"
	},
	"scripts": {
		"changeset": "changeset",
		"release": "npm run build && changeset publish",
		"build": "tsc -p tsconfig.prod.json",
		"build:clean": "rimraf dist && tsc",
		"dev": "tsc --incremental --watch",
		"check": "npx @biomejs/biome check .",
		"fix": "npx @biomejs/biome check --write .",
		"test": "vitest",
		"test:coverage": "vitest run --coverage",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.5",
		"@kiberon-labs/config": "^2.0.0",
		"@storybook/addon-docs": "9.0.18",
		"@storybook/addon-onboarding": "9.0.18",
		"@storybook/react-vite": "9.0.18",
		"@testing-library/react": "^16.3.0",
		"@types/d3-color": "^3.1.3",
		"@types/d3-scale": "^4.0.9",
		"@types/d3-scale-chromatic": "^3.1.0",
		"@types/d3-shape": "^3.1.7",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"@vitest/coverage-v8": "^3.2.4",
		"jsdom": "^26.1.0",
		"storybook": "9.0.18",
		"vitest": "^3.2.4"
	}
}
